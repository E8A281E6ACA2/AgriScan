# 服务器配置
SERVER_PORT=8080
GIN_MODE=debug

# 数据库配置
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_password
DB_NAME=agriscan
DB_SSLMODE=disable

# ========== 对象存储配置 ==========

# 方式1: Cloudflare R2 (S3 兼容) - 优先使用
S3_ENDPOINT=https://xxxxxx.r2.cloudflarestorage.com
S3_REGION=auto
S3_ACCESS_KEY_ID=your_access_key_id
S3_SECRET_ACCESS_KEY=your_secret_access_key
S3_BUCKET=your_bucket
S3_PUBLIC_URL=https://cdn.yourdomain.com  # 自定义域名(可选)

# 方式2: 腾讯云 COS (备用)
COS_SECRET_ID=
COS_SECRET_KEY=
COS_BUCKET=
COS_REGION=ap-guangzhou
COS_BASE_URL=

# 大模型配置
LLM_PROVIDER=mock  # mock, qwen, baidu, openai
LLM_API_KEY=your_api_key
LLM_ENDPOINT=
LLM_MODEL=
LLM_IMAGE_INPUT=auto  # auto, url, base64

# 本地存储（无对象存储时兜底）
LOCAL_STORAGE_PATH=./uploads
LOCAL_STORAGE_BASE_URL=http://localhost:8080/uploads

# 认证/会员配置
AUTH_ANON_LIMIT=3
AUTH_OTP_MINUTES=10
AUTH_SESSION_DAYS=30
AUTH_FREE_RETENTION_DAYS=7
AUTH_FREE_QUOTA_TOTAL=0
AUTH_DEBUG_OTP=true

# 会员档次（可调整）
PLAN_SILVER_QUOTA_TOTAL=5000
PLAN_GOLD_QUOTA_TOTAL=20000
PLAN_DIAMOND_QUOTA_TOTAL=100000
PLAN_SILVER_RETENTION_DAYS=90
PLAN_GOLD_RETENTION_DAYS=180
PLAN_DIAMOND_RETENTION_DAYS=365
PLAN_SILVER_REQUIRE_AD=false
PLAN_GOLD_REQUIRE_AD=false
PLAN_DIAMOND_REQUIRE_AD=false

# SMTP 邮件配置
FLOWAPI_SMTP_SERVER=smtp.mail.me.com
FLOWAPI_SMTP_PORT=465
FLOWAPI_SMTP_SSL_ENABLED=true
FLOWAPI_SMTP_ACCOUNT=you@example.com
FLOWAPI_SMTP_FROM=you@example.com
FLOWAPI_SMTP_TOKEN=your_app_token

# 管理后台
ADMIN_TOKEN=admin-token
